<h3>Your Tickets</h3>
<table class="table">
    <thead>
        <tr>
            <th>Ticket ID</th>
            <th>Subject</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.TicketID</td>
                <td>@ticket.Subject</td>
                <td>@ticket.Status</td>
            </tr>
        }
    </tbody>
</table>