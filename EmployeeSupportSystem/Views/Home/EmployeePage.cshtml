@model IEnumerable<Ticket>

@{
    ViewData["Title"] = "Employee Page";
}

<h2>Employee Page</h2>
<p>Welcome, Employee! Here you can view your resolved tickets and create new tickets.</p>

<h3>Your Tickets</h3>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Ticket ID</th>
            <th>Subject</th>
            <th>Creation Time</th>
            <th>Resolved Time</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.TicketID</td>
                <td>@ticket.Subject</td>
                <td>@ticket.CreatedAt</td>
                <td>@ticket.ResolvedAt</td>
                <td>@ticket.Status</td>
            </tr>
        }
    </tbody>
</table>