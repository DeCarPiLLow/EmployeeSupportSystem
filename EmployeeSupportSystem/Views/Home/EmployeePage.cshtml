@model EmployeeDashboardViewModel

@{
    ViewData["Title"] = "Employee Dashboard";
}

<h2>Employee Dashboard</h2>

<div>
    <h3>Your Tickets</h3>
    <div class="row">
        @foreach (var ticket in Model.Tickets)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@ticket.Subject</h5>
                        <p class="card-text">ID: @ticket.Id</p>
                        <a href="@Url.Action("TicketDetails", "Home", new { id = ticket.Id })" class="btn btn-primary">More Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    <h3>Raise a New Ticket</h3>
    <form asp-action="CreateTicket" method="post">
        <div class="form-group">
            <label asp-for="NewTicket.Subject"></label>
            <input asp-for="NewTicket.Subject" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewTicket.Description"></label>
<textarea asp-for="NewTicket.Description" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>