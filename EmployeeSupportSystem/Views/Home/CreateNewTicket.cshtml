@model CreateNewTicketViewModel

@{
    ViewData["Title"] = "Create New Ticket";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">@ViewData["Title"]</h2>

            <form asp-action="CreateNewTicket" method="post">
                <div class="mb-3">
                    <label asp-for="Subject" class="form-label"></label>
                    <input asp-for="Subject" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Create Ticket</button>
            </form>
        </div>
    </div>
</div>
